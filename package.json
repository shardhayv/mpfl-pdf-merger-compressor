{
  "name": "pdf-merger-lan",
  "version": "1.0.0",
  "description": "LAN-based PDF merger for office use",
  "main": "server.js",
  "scripts": {
    "server": "node server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && cd client && npm install && npm run build",
    "start": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "cors": "^2.8.5",
    "pm2": "^5.3.0",
    "ghostscript4js": "^3.2.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
